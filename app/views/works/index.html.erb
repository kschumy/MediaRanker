<h3 class="teal-title">List of works</h3>
<section>
	<% @all_works_sorted_in_categories.each do |work_category, works| %>
		<article class="works-table-of-category"
		<h4 class="black-subtitle"><%= work_category.titlecase %>s</h4>
			<table>
				<thead>
					<tr>
						<th width="80">Votes</th>
						<th>Title</th>
						<th>Created By</th>
						<th width="100">Published</th>
						<th width="100">Upvote</th>
					</tr>
				</thead>
				<tbody>
					<% works.each do |work| %>
					<tr>
						<td><%= work.get_vote_count %></td>
						<td><%= link_to work.title, work_path(work.id) %></td>
						<td><%= work.creator %></td>
						<td><%= work.get_publication_year %></td>
						<td><%= link_to "Upvote", work_votes_path(work.id), method: :post, class: "button vote-button" %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</article>
	<% end %>
</section>
